# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.at(path="/public", file)


# User
#GET        /users               controllers.UsersController.list
POST          /users               controllers.UsersController.create
GET           /users/:id           controllers.UsersController.show(id)
PUT           /users/:id           controllers.UsersController.update(id)
DELETE        /users/:id           controllers.UsersController.delete(id)

# Auth
POST          /auth                controllers.AuthController.login
GET           /logout              controllers.TestController.logout

# Dummy
GET           /actiontest          controllers.TestController.main
GET           /authFail            controllers.TestController.fail


