# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.at(path="/public", file)


# JSON API
#GET        /users               controllers.UsersController.list
POST          /users               controllers.UsersController.create
GET           /users/:id           controllers.UsersController.show(id)
POST        /users/:id           controllers.UsersController.update(id)
DELETE        /users/:id           controllers.UsersController.delete(id)

GET           /users2              controllers.UsersController.show2
